

.nav {
  /* top: -20; */
  display: flex;
  flex-flow: row;
  z-index: 20;
  position: fixed;

}
.nav button {
  color: #FF9C35;
  border: 1px solid #FF9C35;
  font-size: 14px;
  text-align: center;
  line-height: 30px;
  height: 30px;
  width: 65px;
  margin-right: 60px;
  margin-left: 14px;
}
.caidanyi{
  position:absolute;
  width:100%;
  height:1600px;
  background:#eee;
  margin-top: 30px;
}

.aside{
  float:left;
  height:100%;
  width:100px;
  padding-bottom:0;
  text-align:center;
  overflow: scroll;
  background:#fff;
}
.aside::-webkit-scrollbar{
  width:0;
}
.aside .menu{
  height:40px;
  color:black;
  font-size:19px;
  font-weight: 100;
  line-height:40px;
  border-top:1px solid #eee;
}
.aside .menu.active{
  background:#eee;
}
.item-content{
  float:left;
  width:calc(100% - 100px);
  height:100%;
}
.item-content .box{
  height:calc(100% - 10px);
  padding:10px 0 0 10px;
  overflow: scroll;
}
.item-content .box.active{
  padding-bottom:80px;
}
.item-content .box::-webkit-scrollbar{
  width:0;
}
.item-content .box .item{
  height:80px;
  padding:10px 0 10px 10px;
  /* margin-top: 50px; */
  margin-bottom:10px;
  background:#fff;
}
.item-content .box .item image{
  display:block;
  float:left;
  height:80px;
  width:90px;
  margin-right:10px;
}
.item-content .box .item text{
  display:block;
  font-size:16px;
}
.item-content .box .item .title{
  margin-bottom:5px;
  font-weight:bolder;
}
.item-content .box .item .price{
  color:red;
  font-size:18px;
  margin-bottom:5px;
}
.item-content .box .item .btn{
  display:block;
  float:right;
  margin:-10px 10px 0 0;
  padding:5px 10px;
  font-size:14px;
  color:#fff;
  background:orange;
  border-radius:20px;
}
.item-content .box .item .btn.active{
  background:#ccc;
}
.bottom-bar{
    display:flex;
    position: fixed;
    bottom:0;
    width:100%;
    height:80px;
    line-height:80px;
    background:#fff;
    box-shadow: 0 -5px 10px #ccc;
}
.bottom-bar.hidden{
  display:none;
}
.bottom-bar>view{
    flex-grow: 1;
}
.bottom-bar .count{
    padding-left:10px;
}
.bottom-bar .num{
    margin-right:10px;
    font-size:18px;
    font-weight:bolder;
    color:red;
}
.bottom-bar .btn{
    height:40px;
    width:50px;
    margin:20px 10px 0 0;
    color:#fff;
    line-height:40px;
    text-align:center;
    font-size:16px;
    background:orange;
}
